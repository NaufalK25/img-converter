{
    "name": "img-converter",
    "version": "1.0.0",
    "description": "Image Converter",
    "main": "dist/app.js",
    "scripts": {
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "build-tw": "tailwindcss -i ./public/css/input.css -o ./dist/public/css/index.css",
        "watch-tw": "tailwindcss -i ./public/css/input.css -o ./dist/public/css/index.css --watch",
        "build": "npm run build-ts && npm run build-tw",
        "start": "npm run serve",
        "serve": "node dist/app.js",
        "dev": "npm run build && tsnd --respawn --pretty --transpile-only app.ts",
        "lint": "eslint . --ext .ts",
        "ejs-lint": "npx ejs-lint ./src/views/**/*.ejs",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
        "image",
        "converter"
    ],
    "author": "NaufalK25",
    "license": "Apache-2.0",
    "dependencies": {
        "dotenv": "^15.0.0",
        "ejs": "^3.1.6",
        "express": "^4.17.2",
        "jimp": "^0.16.1",
        "multer": "^1.4.4",
        "tslib": "^2.3.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/morgan": "^1.9.3",
        "@types/multer": "^1.4.7",
        "@types/node": "^17.0.13",
        "@typescript-eslint/eslint-plugin": "^5.10.1",
        "@typescript-eslint/parser": "^5.10.1",
        "eslint": "^8.8.0",
        "morgan": "^1.10.0",
        "tailwindcss": "^3.0.18",
        "ts-node": "^10.4.0",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.5.5"
    }
}
